// prisma/schema.prisma
// Usaremos SQLite para el desarrollo local, fácil de cambiar a PostgreSQL para Vercel.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Usuario para la autenticación
model User {
  id        String   @id @default(cuid())
  username  String   @unique // Usaremos 'username' como identificador
  password  String // Contraseña hasheada
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Modelo de Producto para el inventario
model Product {
  id        String   @id @default(cuid())
  name      String
  quantity  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
